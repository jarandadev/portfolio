---
import Badge from './Badge.astro';

interface Props {
	title: string;
  imageSrc: string;
	body: string;
  href: string;
	techStack: string[];
}

const { href, imageSrc, title, body, techStack } = Astro.props;
---
<article class="w-full rounded-xl border p-8 flex flex-col gap-2 justify-between">
	<div class="flex flex-col gap-2">
		<a href={href} target="_blank">
			<img src={imageSrc} alt="Project Image" class="rounded-xl object-cover object-top aspect-video mb-4">
		</a>
		<h3 class="text-lg font-bold">{title}</h3>
		<p class="text-pretty">{body}</p>
		<ul class="flex gap-2">
			{techStack.map(tech => <li><Badge>{tech}</Badge></li>)}
		</ul>
	</div>
</article>